{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noParameterAssign": "off",
				"noNonNullAssertion": "off"
			}
		}
	},
	"files": {
		"includes": ["src/**", "!src/jsonc.ts"]
	}
}
